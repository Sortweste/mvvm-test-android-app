<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/categoryFragment">
    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.sort.pinto.ui.fragments.CategoryFragment"
        android:label="Category"
        tools:layout="@layout/fragment_category" >
        <action
            android:id="@+id/action_categoryFragment_to_categoryListFragment"
            app:destination="@id/categoryListFragment"
            app:enterAnim="@anim/nav_default_enter_anim" />
    </fragment>
    <fragment
        android:id="@+id/clientFragment"
        android:name="com.sort.pinto.ui.fragments.ClientFragment"
        android:label="Client"
        tools:layout="@layout/fragment_client" />
    <fragment
        android:id="@+id/salesFragment"
        android:name="com.sort.pinto.ui.fragments.SalesFragment"
        android:label="Sales"
        tools:layout="@layout/fragment_sales" />
    <fragment
        android:id="@+id/reserveFragment"
        android:name="com.sort.pinto.ui.fragments.ReserveFragment"
        android:label="Reserve"
        tools:layout="@layout/fragment_reserve" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.sort.pinto.ui.fragments.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/categoryListFragment"
        android:name="com.sort.pinto.ui.fragments.CategoryListFragment"
        android:label="fragment_category_list"
        tools:layout="@layout/fragment_category_list" />
</navigation>